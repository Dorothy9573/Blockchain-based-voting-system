{
  "version": 2,
  "builds": [
    { "src": "client-app/package.json", "use": "@vercel/next" },
    {
      "src": "server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/$1.js" },
    { "src": "/(.*)", "dest": "client-app/$1" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "ignoreCommand": "echo 'Skipping submodule fetch...'"
}
